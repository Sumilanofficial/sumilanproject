<resources>
    <!-- Define custom dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/green</item>
        <!-- Optionally set border or elevation if needed -->
        <item name="elevation">4dp</item>
        <item name="borderWidth">0dp</item>
    </style>


</resources>


    <!-- res/values/styles.xml -->
